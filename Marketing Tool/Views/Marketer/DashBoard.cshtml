@model IEnumerable<Marketing_Tool.Models.Student_tbl>
@{
    Layout = null;
    var confirmed = ViewBag.confirmed;
    var unAnswerd = ViewBag.UnAnswerd;
    var rejected = ViewBag.Rejected;
    var pending = ViewBag.Pending;
    var todayInq = ViewBag.TodayInquary;
}
<!doctype html>
<html lang="en">
<head>
    @*Required meta tags*@
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Marketing tool</title>
    <link href="~/Styles/styles.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">

    <!--table-->


    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.10.1/bootstrap-table.min.css">
    <script src="//code.jquery.com/jquery.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.10.1/bootstrap-table.min.js"></script>


</head>
<body style="background-color: #D2D6E7">
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h5>MARKETING TOOL</h5>
                <hr style="background-color:white; height:1px;" />
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a><i class="fa fa-th-large" aria-hidden="true"></i> DASHBOARD</a>
                </li>
                <li>
                    <a href="@Url.Action("M_studentDetails")">  <i class="fa fa-address-card-o" aria-hidden="true"></i> STUDENT DETAILS</a>
                </li>
                <li>
                    <a href="@Url.Action("ConfirmedStudents")"> <i class="fa fa-address-book-o" aria-hidden="true"></i> CONFIRMED STUDENT</a>
                </li>
                <li>
                    <a href="@Url.Action("Student_Reports")"> <i class="fa fa-file-pdf-o" aria-hidden="true"></i>  STUDENT REPORT</a>
                </li>
            </ul>
        </nav>
        <div class="content w-100">
            <nav class="navbar navbar-expand-lg navbar-light " style="background-color: #D2D6E7;">
                <button type="button" id="sidebarCollapse" class="btn btn-info" style="background: #465987; color:#fff; ">
                    <i class="fa fa-align-justify"></i> <span></span>
                </button>
                @*<a class="navbar-brand" href="#">Navbar</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-align-justify"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item" style="padding-right:20px">
                            <i class="fa fa-user-circle" aria-hidden="true" style="color:#465987;"> </i>
                            @Html.ActionLink("Profile", "EditProfile", "Admin", new { id = "prof", style = "color: #465987" })
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Login","Login")" style="color: #465987"> <i class="fa fa-sign-out" aria-hidden="true" style="color: #465987;"></i>Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div style="margin-left:10px;margin-top:15px;">
                <h4 style="font-weight:800;">DASHBOARD</h4>
            </div>
            <!--Dashboard-->
            <section>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-10 col-lg-8 col-md-8 ml-2">
                            <div class="row pt-md-5 mt-md-3 mb-5">
                                <div class="col-xl-3 col-sm-6 p-2">
                                    <div class="card card-common" style="border-radius: 1rem">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">

                                                <i class="fas fa-user fa-5x text-info" style="margin-top:20px"></i>

                                                <div class="text-right text-dark">
                                                    <h5>Confirmed Inquiries</h5>
                                                    <h3>@confirmed</h3>
                                                </div>
                                            </div>
                                            <br /> <br />
                                        </div>

                                    </div>
                                </div>
                                <div class="col-xl-3 col-sm-6 p-2">
                                    <div class="card card-common" style="border-radius: 1rem">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <i class="fas fa-users fa-5x text-info" style="margin-top:20px"></i>
                                                <div class="text-right text-dark">
                                                    <h5>Unanswered Inquiries</h5>
                                                    <h3>@unAnswerd</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <br /> <br />
                                    </div>
                                </div>
                                <div class="col-xl-3 col-sm-6 p-2">
                                    <div class="card card-common" style="border-radius: 1rem">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">

                                                <i class="fas fa-user-times fa-5x text-info" style="margin-top:20px"></i>

                                                <div class="text-right text-dark">
                                                    <h5>Rejected Inquiries</h5>
                                                    <h3>@rejected</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <br /> <br />
                                    </div>
                                </div>
                                <div class="col-xl-3 col-sm-6 p-2">
                                    <div class="card card-common" style="border-radius: 1rem;padding:10px">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">

                                                <i class="fa fa-user-o fa-5x text-info" style="margin-top:20px"></i>

                                                <div class="text-right text-dark">
                                                    <h5>Pending Inquiries</h5>
                                                    <h3>@pending</h3>
                                                    <h5 style="color:red;">Today : @todayInq</h5>
                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Back to top button -->
            <button type="button" class="btn btn-default btn-floating btn-lg" id="btn-back-to-top" style="background-color: #465987; color: white;position:fixed;bottom:20px;right:20px;border-radius:100% ">
                <i class="fas fa-arrow-up"></i>

            </button>

        </div>
    </div>

    <hr />
    <footer>
        <div class="footer-bottom">
            <p style="color: #465987; text-align: center; font-size: 15px;">&copy; @DateTime.Now.Year -EWIS. All Rights Reserved</p>
        </div>
    </footer>

    @*Optional JavaScript
        jQuery first, then Popper.js, then Bootstrap JS*@
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

        /*Table script*/
        function queryParams() {
            return {
                type: 'owner',
                sort: 'updated',
                direction: 'desc',
                per_page: 100,
                page: 1
            };
        }

        //back to top

        //Get the button
        let mybutton = document.getElementById("btn-back-to-top");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction();
        };

        function scrollFunction() {
            if (
                document.body.scrollTop > 20 ||
                document.documentElement.scrollTop > 20
            ) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }
        // When the user clicks on the button, scroll to the top of the document
        mybutton.addEventListener("click", backToTop);

        function backToTop() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    @*<link href="~/Styles/AdminStyleSheet.css" rel="stylesheet" />*@


</body>
</html>